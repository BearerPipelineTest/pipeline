go_library(
    name = "oidc",
    srcs = glob(["*.go"], exclude = ["*_test.go"]),
    visibility = ["PUBLIC"],
    deps = [
        "//internal/cluster/auth",
        "//src/auth",
        "//third_party/go:emperror.dev_errors",
